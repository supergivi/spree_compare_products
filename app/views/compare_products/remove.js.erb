<% if @deleted_product %>
var product_id = <%= @deleted_product.id %>
onRemoveCompareProduct(product_id);
<% end %>

<% notice = flash[:notice]
flash[:notice] = nil
if notice %>
  var notice = "<%= notice %>";
  onCompareProductNotice(notice);
<% end
error = flash[:error]
flash[:error] = nil
if error %>
  var error = "<%= error %>";
  onCompareProductError(error);
<% end %>